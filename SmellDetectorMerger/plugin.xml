<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="SmellDetectorMerger.commands.category"
            name="Find Smells Category">
      </category>
      <command
            categoryId="SmellDetectorMerger.commands.category"
            name="Detect Code Smells"
            id="SmellDetectorMerger.commands.findSmellsCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="smelldetectormerger.handlers.SmellDetectionHandler"
            commandId="SmellDetectorMerger.commands.findSmellsCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=additions">
         <menu
               id="SmellDetectorMerger.menus.findSmellsMenu"
               label="SmellDetectorMerger"
               mnemonic="M">
            <command
                  commandId="SmellDetectorMerger.commands.findSmellsCommand"
                  id="SmellDetectorMerger.menus.findSmellsCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
          <view
            name="SmellDetectorMerger Smells View"
            icon="icons/sample.png"
            class="smelldetectormerger.views.SmellsView"
            id="smelldetectormerger.views.SmellsView">
      </view>
   </extension>

</plugin>
