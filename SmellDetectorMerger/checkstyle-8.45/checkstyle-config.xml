<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
          "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
          "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

	<!-- Set to only check for java files in a project -->
	<property name="fileExtensions" value="java"/>
	
	<!-- The check for large classes -->
	<!-- https://checkstyle.sourceforge.io/apidocs/com/puppycrawl/tools/checkstyle/checks/sizes/FileLengthCheck.html -->
	<module name="FileLength"/>

	<module name="TreeWalker">

		<!-- The check for long method -->
		<!-- https://checkstyle.sourceforge.io/apidocs/com/puppycrawl/tools/checkstyle/checks/sizes/MethodLengthCheck.html -->
		<module name="MethodLength"/>
		
		<!-- The check for long parameter list -->
		<!-- https://checkstyle.sourceforge.io/apidocs/com/puppycrawl/tools/checkstyle/checks/sizes/ParameterNumberCheck.html -->
		<module name="ParameterNumber"/>

	</module>

</module>